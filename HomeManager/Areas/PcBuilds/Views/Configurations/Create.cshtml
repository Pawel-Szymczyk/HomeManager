@*@model HomeManager.Areas.PcBuilds.Models.Configuration*@
@model HomeManager.Areas.PcBuilds.Models.Components

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Configuration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Configuration.Description" class="control-label"></label>
                <input asp-for="Configuration.Description" class="form-control" />
                <span asp-validation-for="Configuration.Description" class="text-danger"></span>
            </div>

            <div class="input-group mb-3">
                <select class="btn btn-light btn-block" asp-for="SelectedCPUWatercoolerId" asp-items="@(new SelectList(Model.CPUWatercoolers,"CPUWatercoolerId","Name"))">
                    <option value="">Pick CPU Watercooler</option>
                </select>
                <input type="button" class="btn btn-outline-primary" value="&#x2b;" onclick="window.location='@Url.Action("Create", "CPUWatercoolers")'" />
            </div>

            <div class="input-group mb-3">
                <select class="btn btn-light btn-block" asp-for="SelectedFanId" asp-items="@(new SelectList(Model.Fans,"FanId","Name"))">
                    <option value="">Pick Fan</option>
                </select>
                <input type="button" class="btn btn-outline-primary" value="&#x2b;" onclick="window.location='@Url.Action("Create", "Fans")'" />
            </div>

            <div class="input-group mb-3">
                <select class="btn btn-light btn-block" asp-for="SelectedGraphicsCardId" asp-items="@(new SelectList(Model.GraphicsCards,"GraphicsCardId","Name"))">
                    <option value="">Pick Graphics Card</option>
                </select>
                <input type="button" class="btn btn-outline-primary" value="&#x2b;" onclick="window.location='@Url.Action("Create", "GraphicsCards")'" />
            </div>

            <div class="input-group mb-3">
                <select class="btn btn-light btn-block" asp-for="SelectedHardDriveId" asp-items="@(new SelectList(Model.HardDrives,"HardDriveId","Name"))">
                    <option value="">Pick Hard Drive</option>
                </select>
                <input type="button" class="btn btn-outline-primary" value="&#x2b;" onclick="window.location='@Url.Action("Create", "HardDrives")'" />
            </div>

            <div class="input-group mb-3">
                <select class="btn btn-light btn-block" asp-for="SelectedMotherboardId" asp-items="@(new SelectList(Model.Motherboards,"MotherboardId","Name"))">
                    <option value="">Pick Motherboard</option>
                </select>
                <input type="button" class="btn btn-outline-primary" value="&#x2b;" onclick="window.location='@Url.Action("Create", "Motherboards")'" />
            </div>

            <div class="input-group mb-3">
                <select class="btn btn-light btn-block" asp-for="SelectedOtherId" asp-items="@(new SelectList(Model.Others,"OtherId","Name"))">
                    <option value="">Pick Other Item</option>
                </select>
                <input type="button" class="btn btn-outline-primary" value="&#x2b;" onclick="window.location='@Url.Action("Create", "Others")'" />
            </div>

            <div class="input-group mb-3">
                <select class="btn btn-light btn-block" asp-for="SelectedPCCaseId" asp-items="@(new SelectList(Model.PCCases,"PCCaseId","Name"))">
                    <option value="">Pick PC Case</option>
                </select>
                <input type="button" class="btn btn-outline-primary" value="&#x2b;" onclick="window.location='@Url.Action("Create", "PCCases")'" />
            </div>

            <div class="input-group mb-3">
                <select class="btn btn-light btn-block" asp-for="SelectedPowerSupplyId" asp-items="@(new SelectList(Model.PowerSupplies,"PowerSupplyId","Name"))">
                    <option value="">Pick Power Supply</option>
                </select>
                <input type="button" class="btn btn-outline-primary" value="&#x2b;" onclick="window.location='@Url.Action("Create", "PowerSupplies")'" />
            </div>

            <div class="input-group mb-3">
                <select class="btn btn-light btn-block" asp-for="SelectedProcessorId" asp-items="@(new SelectList(Model.Processors,"ProcessorId","Name"))">
                    <option value="">Pick Processor</option>
                </select>
                <input type="button" class="btn btn-outline-primary" value="&#x2b;" onclick="window.location='@Url.Action("Create", "Processors")'" />
            </div>

            <div class="input-group mb-3">
                <select class="btn btn-light btn-block" asp-for="SelectedRAMId" asp-items="@(new SelectList(Model.RAMs,"RamId","Name"))">
                    <option value="">Pick RAM</option>
                </select>
                <input type="button" class="btn btn-outline-primary" value="&#x2b;" onclick="window.location='@Url.Action("Create", "RAMs")'" />
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
