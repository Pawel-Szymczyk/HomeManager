@model IEnumerable<HomeManager.Areas.PcBuilds.Models.Processor>

@{
    ViewData["Title"] = "Index";
}

<h1>Processors</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductCollection)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfCores)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfThreads)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cache)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TDP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProcessorBaseFrequency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductCollection)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfCores)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfThreads)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cache)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TDP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProcessorBaseFrequency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
