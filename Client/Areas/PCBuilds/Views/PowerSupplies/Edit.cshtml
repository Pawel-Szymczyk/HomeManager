@model Client.Areas.PCBuilds.Models.PowerSupply

@section Banner {
    @*... contents of the banner specific to that view*@
    <div id="pc-builder-banner" class="eightbit-header">
        <img class="website-header-img" src="~/lib/images/power_supply.png" alt="power supply" />
    </div>
}

@{
    ViewData["Title"] = "Power Supply";
}

<article class="nes-container">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div class="actions-container">
            <div>
                <h1>Edit</h1>
            </div>
            <div class="actions-container-buttons">
                <button type="submit" class="nes-btn is-primary">Save</button>
                <a class="nes-btn" asp-action="Index">Back to List</a>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-8">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="nes-field form-field">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="nes-input" />
                    <span asp-validation-for="Name" class="nes-text is-error"></span>
                </div>
                <div class="nes-field form-field">
                    <label asp-for="Manufacturer" class="control-label"></label>
                    <input asp-for="Manufacturer" class="nes-input" />
                    <span asp-validation-for="Manufacturer" class="nes-text is-error"></span>
                </div>
                <div class="nes-field form-field">
                    <label asp-for="Model" class="control-label"></label>
                    <input asp-for="Model" class="nes-input" />
                    <span asp-validation-for="Model" class="nes-text is-error"></span>
                </div>
                <div class="nes-field form-field">
                    <label asp-for="Power" class="control-label"></label>
                    <input asp-for="Power" class="nes-input" />
                    <span asp-validation-for="Power" class="nes-text is-error"></span>
                </div>
                <div class="nes-field form-field">
                    <label asp-for="Color" class="control-label"></label>
                    <input asp-for="Color" class="nes-input" />
                    <span asp-validation-for="Color" class="nes-text is-error"></span>
                </div>
                <div class="nes-field form-field">
                    <label asp-for="Certificate" class="control-label"></label>
                    <input asp-for="Certificate" class="nes-input" />
                    <span asp-validation-for="Certificate" class="nes-text is-error"></span>
                </div>

                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="ModularCables" /> @Html.DisplayNameFor(model => model.ModularCables)
                    </label>
                </div>

                <div class="nes-field form-field">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="nes-input" />
                    <span asp-validation-for="Price" class="nes-text is-error"></span>
                </div>
                <div class="nes-field form-field">
                    <label asp-for="Link" class="control-label"></label>
                    <input asp-for="Link" class="nes-input" />
                    <span asp-validation-for="Link" class="nes-text is-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageFile" class="nes-btn">
                        <span>Select your image</span>
                        <input asp-for="ImageFile" accept="image/*" />
                    </label>
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </div>
        </div>
    </form>
</article>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
